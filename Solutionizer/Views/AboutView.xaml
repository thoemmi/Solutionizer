    </FlowDocumentScrollViewer>

    <Button 
      HorizontalAlignment="Right"
      Margin="0 16 0 0"
      Grid.Row="4"
      MinWidth="80"
      x:Name="Ok" 
      Content="Ok"/>

  </Grid>
</UserControl>
